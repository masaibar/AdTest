<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_mediation"
    xmlns:ad="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.masaibar.adtest.AdMobMediationActivity">

    <Button
        android:id="@+id/button_reload_ad"
        android:layout_margin="16dp"
        android:text="reload ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adview_mediation_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ad:adSize="BANNER"
        ad:adUnitId="@string/banner_ad_unit_id"/>
</RelativeLayout>
